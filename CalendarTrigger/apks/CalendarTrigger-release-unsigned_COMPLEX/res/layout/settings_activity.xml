<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_gravity="center|left|top" android:orientation="vertical" android:id="@id/edit_activity_container" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textColor="@android:color/holo_blue_dark" android:paddingTop="@dimen/default_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings" />
        <TextView android:id="@id/versiontext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/lastcalltext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/lastalarmtext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/laststatetext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/userstatetext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/currentstatetext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/locationtext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/wakelocktext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@id/logfiletext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
        <RadioGroup android:id="@id/radioGroupLogging" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:id="@id/radioLoggingOn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/LoggingOn" />
            <RadioButton android:id="@id/radioLoggingOff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/LoggingOff" />
        </RadioGroup>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:enabled="true" android:gravity="left" android:layout_gravity="left" android:id="@id/clear_log" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Button android:enabled="true" android:gravity="right" android:layout_gravity="right" android:id="@id/show_log" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <CheckBox android:id="@id/logcyclebox" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <CheckBox android:id="@id/nextlocationbox" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button android:id="@id/resetbutton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reset" />
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:enabled="true" android:gravity="left" android:layout_gravity="left" android:id="@id/save_settings" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Button android:enabled="true" android:gravity="right" android:layout_gravity="right" android:id="@id/load_settings" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView android:id="@id/savefiletext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
    </LinearLayout>
</ScrollView>